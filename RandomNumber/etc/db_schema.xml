<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="note_orders" resource="default" engine="innodb" comment="level_quick_order_status">
        <column xsi:type="int"
                name="id"
                unsigned="true"
                padding="10"
                nullable="false"
                identity="true"
                comment="id"/>
        <column xsi:type="int"
                name="customerid"
                unsigned="true"
                padding="10"
                nullable="false"
                identity="false"
                comment="customer_id"/>
        <column xsi:type="varchar"
                name="name"
                length="20"
                nullable="false"
                comment="label"/>
        <column xsi:type="varchar"
                name="email"
                length="20"
                nullable="false"
                comment="email"/>
        <column xsi:type="varchar"
                name="sku"
                length="20"
                nullable="false"
                comment="sku"/>
        <column xsi:type="int"
                name="qty"
                unsigned="true"
                padding="10"
                nullable="false"
                identity="false"
                comment="qtu"/>
        <constraint xsi:type="primary" referenceId = "PRIMARY">
            <column name="id"/>
        </constraint>
    </table>

    </schema>


